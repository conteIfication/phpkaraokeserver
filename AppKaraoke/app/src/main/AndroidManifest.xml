<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bku.cse.karaoke">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_theme1">
        <activity
            android:name=".controller.LogoActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.HomeActivity" />
        <activity android:name=".controller.MeActivity" />
        <activity android:name=".controller.FeedActivity" />


        <activity
            android:name=".controller.DetailActivity"
            android:parentActivityName=".controller.HomeActivity" />
        <activity
            android:name=".controller.LoginActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.SignUpActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name=".controller.SearchActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name=".controller.SelectModeKaraokeActivity"
            android:parentActivityName=".controller.HomeActivity"
            android:noHistory="false"/>
        <activity android:name=".controller.SingRecordAudioActivity"
            android:parentActivityName=".controller.SelectModeKaraokeActivity" />

        <activity android:name=".controller.SingRecordVideoActivity"
            android:noHistory="true"/>
        <activity android:name=".controller.SettingActivity"
            android:parentActivityName=".controller.HomeActivity"
            android:noHistory="true"/>
        <activity android:name=".controller.PlayMusicActivity"/>
    </application>

</manifest>