<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play" />

    <LinearLayout
        android:id="@+id/media_custom_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/media_play_pause"
            style="@android:style/MediaButton.Play"
            android:layout_width="50dp"
            android:contentDescription="Play"
            android:src="@drawable/ic_media_pause_dark" />

        <SeekBar
            android:id="@+id/mediacontroller_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/media_time"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/media_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_media_fullscreen_dark" />

    </LinearLayout>

</RelativeLayout>
