<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/record_image_cover"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/unnamed" />

        <TextView
            android:id="@+id/record_songname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="Shape of you"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/record_image_cover"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/record_owner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="User Puth"
            android:textColor="#FF7F7B7B"
            app:layout_constraintLeft_toRightOf="@+id/record_image_cover"
            app:layout_constraintTop_toBottomOf="@+id/record_songname" />

        <TextView
            android:id="@+id/record_up_time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="13:05:00 2017-06-04"
            android:textColor="#FFA6A0A0"
            app:layout_constraintLeft_toRightOf="@+id/record_image_cover"
            app:layout_constraintTop_toBottomOf="@+id/record_owner" />

        <ImageButton
            android:id="@+id/record_btn_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/record_share_lb"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_3dot" />

        <TextView
            android:id="@+id/record_share_lb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="12dp"
            android:text="Share"
            android:textColor="#FFBCB9B9"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/record_share_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_share" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
